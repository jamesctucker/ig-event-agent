{
  "name": "ig-event-agent",
  "displayName": "Instagram Event Agent",
  "version": "0.0.1",
  "description": "Extract Instagram events from saved collections and save to Google Sheets",
  "author": "James Tucker",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.9.0",
    "openai": "^4.20.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.258",
    "@types/node": "^20.10.0",
    "plasmo": "^0.88.0",
    "sass": "^1.69.0",
    "typescript": "^5.3.0"
  },
  "manifest": {
    "host_permissions": [
      "https://www.instagram.com/*",
      "https://instagram.com/*",
      "https://sheets.googleapis.com/*"
    ],
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "identity",
      "scripting"
    ],
    "oauth2": {
      "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/spreadsheets"
      ]
    }
  }
}
